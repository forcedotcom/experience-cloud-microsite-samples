<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>53.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Lead Form</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs> 
        <targetConfig targets="lightningCommunity__Default">
            <property
                name="buttonText"
                label="Submit Button Label"
                type="String"
                default="SUBMIT"
            />
            <property
                name="submitActionType"
                label="Form Acknowledgement Type"
                type="String"
                default="Show inline message"
                datasource="Show inline message, Redirect to existing page"
            />
            <property
                name="redirectUrl"
                label="Redirect URL"
                type="String"
                default=""
            />
            <property
                name="submitActionSuccessMessage"
                label="Success Message"
                type="String"
                default="Thank you!"
            />
            <property
                name="submitActionErrorMessage"
                label="Error Message"
                type="String"
                default="Oh no, something went wrong!"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
